{
  "name": "mr-rocket",
  "module": "src/index.tsx",
  "type": "module",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --watch --inspect-wait=ws://localhost:6499 src/index.tsx",
    "ext": "bun run --filter @mr-rocket/extension dev",
    "cli": "bun run src/cli.ts",
    "tui": "bun run src/index.tsx",
    "build:cli": "bun build --compile src/cli.ts --outfile dist/mr-rocket",
    "build:tui": "bun build --compile src/index.tsx --outfile dist/mr-rocket-tui",
    "build:ext": "bun run --filter @mr-rocket/extension build",
    "build:native-host": "bun build --compile scripts/native-host.ts --outfile dist/native-host",
    "build:all": "bun run build:cli && bun run build:tui && bun run build:native-host"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@mr-rocket/shared": "workspace:*",
    "confluence.js": "^1.7.1",
    "@gitbeaker/rest": "^40.0.3",
    "@opentui/core": "^0.1.69",
    "@opentui/react": "^0.1.69",
    "react": "^19.2.3"
  }
}
